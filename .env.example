# ── OmniMessage Gateway ──────────────────────────────────
# Copy this to .env and fill in your credentials

# ── API ──────────────────────────────────────────────────
OMNI_API_KEY=change-me-to-a-secure-key
OMNI_HOST=0.0.0.0
OMNI_PORT=8900
OMNI_DEBUG=false
OMNI_MAX_RETRIES=3
OMNI_RETRY_DELAY=1.0
OMNI_TEMPLATE_DIR=templates

# ── Telegram ─────────────────────────────────────────────
TELEGRAM_TOKEN=
TELEGRAM_PARSE_MODE=Markdown
TELEGRAM_DISABLE_PREVIEW=true

# ── WhatsApp (Meta Cloud API) ────────────────────────────
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_API_VERSION=v19.0

# ── Discord ──────────────────────────────────────────────
DISCORD_WEBHOOK=

# ── Slack ────────────────────────────────────────────────
SLACK_WEBHOOK=

# ── Email (SMTP) ─────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_USE_TLS=true

# ── Webhook ──────────────────────────────────────────────
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=30

# ── Redis (optional, for persistent DLQ/stats) ──────────
REDIS_URL=redis://redis:6379/0
REDIS_DLQ_KEY=omni:dlq
REDIS_STATS_KEY=omni:stats
